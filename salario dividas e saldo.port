programa
{
	
	funcao inicio()
	{
		cadeia nome
		real salario, divida, saldo	
		
		escreva("Qual o seu nome? ")
			leia(nome)
		escreva("\nOlá ", nome) escreva(" qual seu salário? ")
			leia(salario)
		escreva("\nQuanto você possui de dívidas? ")
			leia(divida)
				saldo = salario - divida
					escreva("\nO seu saldo é: ", saldo) escreva(" R$") 
	}
}
